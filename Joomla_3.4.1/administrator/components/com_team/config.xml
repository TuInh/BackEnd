<?xml version="1.0" encoding="utf-8"?>
<config>

	<fieldset name="team"
		label="COM_TEAM_FIELD_CONFIG_INDIVIDUAL_TEAM_DISPLAY"
		description="COM_TEAM_FIELD_CONFIG_INDIVIDUAL_TEAM_DESC"
	>

		<field
			name="team_layout" type="componentlayout"
			label="JGLOBAL_FIELD_LAYOUT_LABEL"
			description="JGLOBAL_FIELD_LAYOUT_DESC"
			menuitems="true"
			extension="com_team"
			view="team"
		/>

		<field name="show_team_category"
			type="list"
			default="hide"
			label="COM_TEAM_FIELD_TEAM_SHOW_CATEGORY_LABEL"
			description="COM_TEAM_FIELD_TEAM_SHOW_CATEGORY_DESC"
		>
			<option value="hide">JHIDE</option>
			<option value="show_no_link">COM_TEAM_FIELD_VALUE_NO_LINK
			</option>
			<option value="show_with_link">COM_TEAM_FIELD_VALUE_WITH_LINK
			</option>
		</field>
		
		<field
			name="save_history"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			label="JGLOBAL_SAVE_HISTORY_OPTIONS_LABEL"
			description="JGLOBAL_SAVE_HISTORY_OPTIONS_DESC"
			>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>
		
		<field
			name="history_limit"
			type="text"
			filter="integer"
			label="JGLOBAL_HISTORY_LIMIT_OPTIONS_LABEL"
			description="JGLOBAL_HISTORY_LIMIT_OPTIONS_DESC"
			default="5"
		/>

		<field name="show_team_list"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			description="COM_TEAM_FIELD_TEAM_SHOW_LIST_DESC"
				label="COM_TEAM_FIELD_TEAM_SHOW_LIST_LABEL"
		>
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>
		</field>

		<field name="presentation_style"
		type="list"
			description="COM_TEAM_FIELD_PRESENTATION_DESC"
			label="COM_TEAM_FIELD_PRESENTATION_LABEL"
		>
			<option value="sliders">COM_TEAM_FIELD_VALUE_SLIDERS</option>
			<option value="tabs">COM_TEAM_FIELD_VALUE_TABS</option>
			<option value="plain">COM_TEAM_FIELD_VALUE_PLAIN</option>
		</field>

		<field name="show_name"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			label="COM_TEAM_FIELD_PARAMS_NAME_LABEL"
			description="COM_TEAM_FIELD_PARAMS_NAME_DESC"
		>
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>
		</field>

		<field name="show_position"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			label="COM_TEAM_FIELD_PARAMS_TEAM_POSITION_LABEL"
			description="COM_TEAM_FIELD_PARAMS_TEAM_POSITION_DESC"
		>
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>
		</field>

		<field name="show_misc"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			label="COM_TEAM_FIELD_PARAMS_MISC_INFO_LABEL"
			description="COM_TEAM_FIELD_PARAMS_MISC_INFO_DESC"
		>
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>
		</field>


		<field name="show_articles"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			label="COM_TEAM_FIELD_ARTICLES_SHOW_LABEL"
			description="COM_TEAM_FIELD_ARTICLES_SHOW_DESC"
		>
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>
		</field>

		<field name="show_profile"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			label="COM_TEAM_FIELD_PROFILE_SHOW_LABEL" description="COM_TEAM_FIELD_PROFILE_SHOW_DESC"
		>
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>
		</field>

		<field name="show_links"
			label="COM_TEAM_FIELD_SHOW_LINKS_LABEL"
			description="COM_TEAM_FIELD_SHOW_LINKS_LABEL"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
		>
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>

		</field>

			<field name="linka_name"
				type="text"
				label="COM_TEAM_FIELD_LINKA_NAME_LABEL"
				description="COM_TEAM_FIELD_LINK_NAME_DESC"
				size="30"
			/>

			<field name="linkb_name"
				type="text"
				label="COM_TEAM_FIELD_LINKB_NAME_LABEL"
				description="COM_TEAM_FIELD_LINK_NAME_DESC"
				size="30"
			/>

			<field name="linkc_name" type="text"
				label="COM_TEAM_FIELD_LINKC_NAME_LABEL" description="COM_TEAM_FIELD_LINK_NAME_DESC"
				size="30" />

			<field name="linkd_name"
				type="text"
				label="COM_TEAM_FIELD_LINKD_NAME_LABEL"
				description="COM_TEAM_FIELD_LINK_NAME_DESC"
				size="30"
			/>

			<field name="linke_name"
				type="text"
				label="COM_TEAM_FIELD_LINKE_NAME_LABEL"
				description="COM_TEAM_FIELD_LINK_NAME_DESC"
				size="30"
			/>


	</fieldset>
	<fieldset name="Icons"
			 label="COM_TEAM_ICONS_SETTINGS"
			 description="COM_TEAM_FIELD_CONFIG_INDIVIDUAL_TEAM_DESC"
			 >

		<field name="team_icons"
			type="list"
			default="0"
			label="COM_TEAM_FIELD_ICONS_SETTINGS_LABEL"
			description="COM_TEAM_FIELD_ICONS_SETTINGS_DESC"
		>
			<option value="0">COM_TEAM_FIELD_VALUE_ICONS
			</option>
			<option value="1">COM_TEAM_FIELD_VALUE_TEXT
			</option>
			<option value="2">COM_TEAM_FIELD_VALUE_NONE
			</option>
		</field>
		
		<field name="icon_misc"
			type="media"
			hide_none="1"
			label="COM_TEAM_FIELD_ICONS_MISC_LABEL"
			description="COM_TEAM_FIELD_ICONS_MISC_DESC" />
	</fieldset>



	<fieldset name="teams"
		label="JGLOBAL_LIST_LAYOUT_OPTIONS"
		description="COM_TEAM_FIELD_CONFIG_TABLE_OF_TEAMS_DESC"
	>
		<field
			name="filter_field"
			type="list"
			default="1"
			description="JGLOBAL_FILTER_FIELD_DESC"
			label="JGLOBAL_FILTER_FIELD_LABEL"
			>
				<option value="hide">JHIDE</option>
				<option value="1">JSHOW</option>
		</field>

		<field name="show_pagination_limit" type="radio"
			default="1"
			class="btn-group btn-group-yesno"
			description="JGLOBAL_DISPLAY_SELECT_DESC"
			label="JGLOBAL_DISPLAY_SELECT_LABEL"
		>
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>
		</field>

		<field name="show_headings" type="radio"
			default="1"
			class="btn-group btn-group-yesno"
			description="JGLOBAL_SHOW_HEADINGS_DESC"
			label="JGLOBAL_SHOW_HEADINGS_LABEL"
		>
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>
		</field>

		<field name="show_position_headings" type="radio"
			default="1"
			class="btn-group btn-group-yesno"
			label="COM_TEAM_FIELD_CONFIG_POSITION_LABEL"
			description="COM_TEAM_FIELD_CONFIG_POSITION_DESC"
		>
			<option value="1">JSHOW</option>
			<option value="0">JHIDE</option>
		</field>

	
			<field name="show_pagination" type="list"
				default="2"
				description="JGLOBAL_PAGINATION_DESC"
				label="JGLOBAL_PAGINATION_LABEL"
			>

				<option value="0">JHIDE</option>
				<option value="1">JSHOW</option>
				<option value="2">JGLOBAL_AUTO</option>
			</field>

			<field
				name="show_pagination_results"
				type="radio"
				class="btn-group btn-group-yesno"
				default="1"
				label="JGLOBAL_PAGINATION_RESULTS_LABEL"
				description="JGLOBAL_PAGINATION_RESULTS_DESC"
			>
				<option value="1">JSHOW</option>
				<option value="0">JHIDE</option>
			</field>

			<field name="initial_sort" type="list"
				description="COM_TEAM_FIELD_INITIAL_SORT_DESC"
				label="COM_TEAM_FIELD_INITIAL_SORT_LABEL"
				validate="options"
				default="ordering"
			>
				<option value="name">COM_TEAM_FIELD_VALUE_NAME</option>
				<option value="sortname">COM_TEAM_FIELD_VALUE_SORT_NAME</option>
				<option value="ordering">COM_TEAM_FIELD_VALUE_ORDERING</option>
			</field>
	</fieldset>

	<fieldset name="Team_Form"
		label="COM_TEAM_FIELD_CONFIG_TEAM_FORM"
		description="COM_TEAM_FIELD_CONFIG_INDIVIDUAL_TEAM_DESC"
	>

		<field
			name="captcha"
			type="plugins"
			folder="captcha"
			default=""
			label="COM_TEAM_FIELD_CAPTCHA_LABEL"
			description="COM_TEAM_FIELD_CAPTCHA_DESC"
			filter="cmd" >
			<option
				value="">JOPTION_USE_DEFAULT</option>
			<option
				value="0">JOPTION_DO_NOT_USE</option>
		</field>

		<field name="banned_subject"
			type="textarea"
			label="COM_TEAM_FIELD_CONFIG_BANNED_SUBJECT_LABEL"
			rows="3"
			cols="30"
			description="COM_TEAM_FIELD_CONFIG_BANNED_SUBJECT_DESC"
		/>

		<field name="banned_text"
			type="textarea"
			label="COM_TEAM_FIELD_CONFIG_BANNED_TEXT_LABEL"
			rows="3"
			cols="30"
			description="COM_TEAM_FIELD_CONFIG_BANNED_TEXT_DESC"
		/>

		<field name="validate_session"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			label="COM_TEAM_FIELD_CONFIG_SESSION_CHECK_LABEL"
			description="COM_TEAM_FIELD_CONFIG_SESSION_CHECK_DESC"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="custom_reply"
			type="radio"
			class="btn-group btn-group-yesno"
			default="0"
			label="COM_TEAM_FIELD_CONFIG_CUSTOM_REPLY_LABEL"
			description="COM_TEAM_FIELD_CONFIG_CUSTOM_REPLY_DESC"
		>
			<option value="1">JYES</option>
			<option value="0">JNO</option>
		</field>

		<field name="redirect"
			type="text"
			size="30"
			label="COM_TEAM_FIELD_CONFIG_REDIRECT_LABEL"
			description="COM_TEAM_FIELD_CONFIG_REDIRECT_DESC" />
	</fieldset>

	<fieldset name="integration"
		label="JGLOBAL_INTEGRATION_LABEL"
		description="COM_TEAM_CONFIG_INTEGRATION_SETTINGS_DESC"
	>

		<field
			name="show_feed_link"
			type="radio"
			class="btn-group btn-group-yesno"
			default="1"
			label="JGLOBAL_SHOW_FEED_LINK_LABEL"
			description="JGLOBAL_SHOW_FEED_LINK_DESC">
				<option value="1">JSHOW</option>
				<option value="0">JHIDE</option>
		</field>

	</fieldset>

	<fieldset name="permissions"
		label="JCONFIG_PERMISSIONS_LABEL"
		description="JCONFIG_PERMISSIONS_DESC"
	>

		<field name="rules"
			type="rules"
			label="JCONFIG_PERMISSIONS_LABEL"
			validate="rules"
			filter="rules"
			component="com_team"
			section="component" />
	</fieldset>

</config>
